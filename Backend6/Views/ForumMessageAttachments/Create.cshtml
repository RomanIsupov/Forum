@model Backend6.Models.ViewModels.ForumViewModels.ForumMessageAttachmentCreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create attachment</h2>

<form asp-action="Create" asp-route-messageId="@ViewBag.Message.Id" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="File" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Details" asp-controller="ForumTopics" asp-route-id="@ViewBag.Message.TopicId">Back to Topic</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
